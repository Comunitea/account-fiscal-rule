<odoo>
    <data>
    <record id="res_config_settings_view_form_l10n_eu_oss" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n.eu.oss</field>
        <field name="model">account.config.settings</field>
        <field name="inherit_id" ref="account.view_account_config_settings" />
        <field name="arch" type="xml">
             <group name="multi_currency" position="after">
                <separator string="OSS"/>
                <group name="oss">
                    <div class="o_setting_right_pane">
                        <span>Apply EU taxes regarding OSS</span>
                        <div class="mt8">
                            <button
                                name="%(l10n_eu_oss.l10n_eu_oss_wizard_action)d"
                                type="action"
                                string="Add new taxes"
                                class="oe_link btn-link"
                            />
                        </div>
                    </div>
                </group>
            </group>
        </field>
    </record>
    </data>
</odoo>
